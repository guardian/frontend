{
    "packages":{
        "frontend-admin":{
            "type":"asg-elb",
            "apps":[ "frontend::fronts-api" ],
            "data":{
                "secondsToWait":600,
                "port":18080,
                "bucket":"aws-frontend-artifacts",
                "healthcheck_paths":[
                    "/management/healthcheck"
                ]
            }
        }
    },
    "recipes":{
        "default":{
            "depends" : ["artifactUpload", "deploy"]
        },
        "deploy":{
            "actionsBeforeApp": ["fronts-api.deploy"]
        },
        "artifactUpload":{
            "actionsBeforeApp": ["fronts-api.uploadArtifacts"]
        }
    }
}