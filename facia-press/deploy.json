{
    "defaultStacks": ["frontend"],
    "packages": {
        "facia-press": {
            "type": "autoscaling",
            "data": {
                "secondsToWait": 1200,
                "port": 18080,
                "healthcheckGrace": 20,
                "warmupGrace":30,
                "bucket": "aws-frontend-artifacts",
                "healthcheck_paths": [
                    "/management/healthcheck"
                ]
            }
        }
    },
    "recipes": {
        "default": {
            "depends": ["artifactUpload", "deploy"]
        },
        "deploy": {
            "actionsBeforeApp": ["facia-press.deploy"]
        },
        "artifactUpload": {
            "actionsBeforeApp": ["facia-press.uploadArtifacts"]
        }
    }
}
