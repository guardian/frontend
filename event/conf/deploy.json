{
    "packages":{
        "frontend-event":{
            "type":"asg-elb",
            "apps":[ "frontend::event" ],
            "data":{
                "secondsToWait":900,
                "port":18080,
                "bucket":"aws-frontend-artifacts",
                "healthcheck_paths":[
                    "/management/healthcheck"
                ]
            }
        }
    },
    "recipes":{
        "default":{
            "depends" : ["artifactUpload", "deploy"]
        },
        "deploy":{
            "actionsBeforeApp": ["frontend-event.deploy"]
        },
        "artifactUpload":{
            "actionsBeforeApp": ["frontend-event.uploadArtifacts"]
        }
    }
}