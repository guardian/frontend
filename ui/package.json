{
    "name": "ui",
    "version": "0.1.0",
    "description": "Guardian rendering framework written in JSX.",
    "private": true,
    "scripts": {
        "lint:scss": "stylelint 'src/**/*.*css'",
        "lint:scss:fix": "stylelint 'src/**/*.*css' --fix",
        "lint:js": "eslint .",
        "lint:js:fix": "eslint . --fix",
        "lint": "yarn -s install && yarn -s lint:js && yarn -s lint:scss",
        "lint:fix": "yarn -s install && yarn -s lint:js:fix && yarn -s lint:scss:fix",
        "test": "yarn -s install && jest",
        "test:watch": "yarn -s install && yarn -s test -- --watch",
        "test:ci": "yarn -s test -- --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
        "clean:dist": "rm -rf ./dist",
        "compile": "BABEL_ENV=production yarn -s install && yarn -s clean:dist && webpack --config ./__config__/webpack.config.prod.js --progress && echo 'Client bundle size:' && gzip-size ../static/target/javascripts/ui.bundle.browser.js",
        "watch": "yarn -s install && yarn run -s clean:dist && concurrently --kill-others -n \"BRSR,SRVR\" -c \"blue,green\" \"yarn watch:browser\" \"yarn watch:server\"",
        "watch:browser": "webpack-dev-server --config ./__config__/webpack.config.dev.js --env.browser",
        "watch:server": "webpack --config ./__config__/webpack.config.dev.js --env.server"
    },
    "dependencies": {
        "preact": "^8.2.1",
        "preact-render-to-string": "^3.6.0",
        "sass-mq": "^3.3.2",
        "stylelint": "^8.0.0",
        "styletron": "^2.5.7",
        "styletron-client": "^2.5.7",
        "styletron-preact": "^2.5.7",
        "styletron-server": "^2.5.7"
    },
    "devDependencies": {
        "babel-core": "^6.25.0",
        "babel-loader": "^7.1.1",
        "babel-plugin-add-react-displayname": "^0.0.4",
        "babel-plugin-emotion": "^7.2.2",
        "babel-plugin-provide-modules": "^1.0.3",
        "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
        "babel-plugin-transform-object-rest-spread": "^6.23.0",
        "babel-plugin-transform-react-jsx": "^6.24.1",
        "babel-plugin-transform-runtime": "^6.23.0",
        "babel-preset-env": "^1.6.0",
        "babel-preset-flow": "^6.23.0",
        "check-node-version": "^2.1.0",
        "concurrently": "^3.5.0",
        "core-js": "^2.4.1",
        "coveralls": "^2.13.0",
        "css-loader": "^0.28.4",
        "emotion": "^7.2.2",
        "flow-bin": "^0.51.1",
        "gzip-size-cli": "^2.0.0",
        "htmltojsx": "^0.2.6",
        "jest": "^20.0.4",
        "node-sass": "^4.5.3",
        "preact-svg-loader": "^0.2.0",
        "prettier": "^1.5.3",
        "raw-loader": "^0.5.1",
        "sass-loader": "^6.0.6",
        "stylelint-config-standard": "^17.0.0",
        "stylelint-order": "^0.6.0",
        "stylelint-scss": "^2.0.0",
        "styletron-loader": "^0.6.0",
        "svgo": "^0.7.2",
        "to-string-loader": "^1.1.5",
        "webpack": "^3.4.1",
        "webpack-bundle-analyzer": "^2.8.3",
        "webpack-dev-server": "^2.6.1",
        "webpack-hot-middleware": "^2.18.2",
        "webpack-merge": "^4.1.0"
    },
    "jest": {
        "moduleDirectories": [
            "<rootDir>/src",
            "<rootDir>/src/app",
            "node_modules"
        ],
        "moduleNameMapper": {
            "^(.*)\\.svg$": "<rootDir>/__mocks__/svg.js"
        },
        "globals": {
            "BROWSER": false,
            "SERVER": true
        }
    }
}
