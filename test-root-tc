#!/bin/bash

set -o nounset
set -o errexit

echo "##teamcity[progressStart 'Grunt tasks']"

./grunt-tc clean validate test:unit compile

echo "##teamcity[progressFinish 'Grunt tasks']"

echo "##teamcity[progressStart 'Scala test']"

./sbt-tc "project root" test

echo "##teamcity[progressFinish 'Scala test']"

echo "Tested everything."
