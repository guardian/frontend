#!/bin/bash

set -o nounset
set -o errexit

set +o xtrace
echo ##teamcity[progressStart 'Starting grunt tasks']
set -o xtrace

./grunt-tc clean validate test:unit compile

set +o xtrace
echo ##teamcity[progressFinish 'Finished grunt tasks']
set -o xtrace

./sbt-tc "project root" test

echo "Tested everything."
