      "id":"politics/2013/nov/10/financial-power-democratic-corruption-and-lies",
      "sectionId":"politics",
      "sectionName":"Politics",
      "webPublicationDate":"2013-11-10T21:00:02Z",
      "webTitle":"Letters: Financial power, democratic corruption and lies",
      "webUrl":"http://www.theguardian.com/politics/2013/nov/10/financial-power-democratic-corruption-and-lies",
      "apiUrl":"http://content.guardianapis.com/politics/2013/nov/10/financial-power-democratic-corruption-and-lies",
