      "id":"world/2013/jun/06/obama-administration-nsa-verizon-records",
      "sectionId":"world",
      "sectionName":"World news",
      "webPublicationDate":"2013-06-07T01:05:00Z",
      "webTitle":"Anger swells after NSA phone records court order revelations",
      "webUrl":"http://www.theguardian.com/world/2013/jun/06/obama-administration-nsa-verizon-records",
      "apiUrl":"http://content.guardianapis.com/world/2013/jun/06/obama-administration-nsa-verizon-records",
