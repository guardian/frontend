      "id":"travel/2012/oct/13/american-road-trips-us-driving-holiday",
      "sectionId":"travel",
      "sectionName":"Travel",
      "webPublicationDate":"2012-10-13T21:44:00Z",
      "webTitle":"Four classic American road trips",
      "webUrl":"http://www.theguardian.com/travel/2012/oct/13/american-road-trips-us-driving-holiday",
