ata":{"photographer":"guardian.co.uk","source":"guardian.co.uk","width":"140","height":"130","secureFile":"https://static-secure.guim.co.uk/sys-images/Guardian/Pix/audio/video/2013/8/20/1376986528778/Amanda-Seyfried-talks-abo-004.jpg"}},{"type":"image","mimeType":"image/jpeg","file":"http://static.guim.co.uk/sys-images/Guardian/Pix/audio/video/2013/8/20/1376986527577/Amanda-Seyfried-talks-abo-003.jpg","typeData":{"photographer":"guardian.co.uk","source":"guardian.co.uk","width":"54","height":"54","secureFile":"https://static-secure.guim.co.uk/sys-images/Guardian/Pix/audio/video/2013/8/20/1376986527577/Amanda-Seyfried-talks-abo-003.jpg"}},{"type":"image","mimeType":"image/jpeg","file":"http://static.guim.co.uk/sys-images/Guardian/Pix/audio/video/2013/8/20/1376986534476/Amanda-Seyfried-talks-abo-022.jpg","typeData":{"photographer":"guardian.co.uk","source":"guardian.co.uk","width":"380","height":"228","secureFile":"https://static-secure.guim.co.uk/sys-images/Guardian/Pix/audio/video/2013/8/20/1376986534476/Amanda-Seyfried-talks-abo-022.jpg"}},{"type":"image","mimeType":"image/jpeg","file":"http://static.guim.co.uk/sys-images/Guardian/Pix/audio/video/2013/8/20/1376986536611/Amanda-Seyfried-talks-abo-024.jpg","typeData":{"photographer":"guardian.co.uk","source":"guardian.co.uk","width":"620","height":"372","secureFile":"https://static-secure.guim.co.uk/sys-images/Guardian/Pix/audio/video/2013/8/20/1376986536611/Amanda-Seyfried-talks-abo-024.jpg"}},{"type":"image","mimeType":"image/jpeg","file":"http://static.guim.co.uk/sys-images/Guardian/Pix/audio/video/2013/8/20/1376986531108/Amanda-Seyfried-talks-abo-019.jpg","typeData":{"photographer":"guardian.co.uk","source":"guardian.co.uk","width":"220","height":"132","secureFile":"https://static-secure.guim.co.uk/sys-images/Guardian/Pix/audio/video/2013/8/20/1376986531108/Amanda-Seyfried-talks-abo-019.jpg"}},{"type":"image","mimeType":"image/jpeg","file":"http://static.guim.co.uk/sys-images/Guardian/Pix/audio/video/2013/8/20/13