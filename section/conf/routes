# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /management$path<.*>        controllers.Management.apply(path)
POST    /management$path<.*>        controllers.Management.apply(path)

GET     /pages/*path                controllers.SectionController.render(path)

# For dev machines
GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET     /*path                      controllers.SectionController.render(path)