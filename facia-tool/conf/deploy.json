{
    "packages":{
        "frontend-facia-tool":{
            "type":"autoscaling",
            "apps":[ "frontend::facia-tool" ],
            "data":{
                "secondsToWait":1200,
                "port":18080,
                "healthcheckGrace":20,
                "bucket":"aws-frontend-artifacts",
                "healthcheck_paths":[
                    "/management/healthcheck"
                ]
            }
        }
    },
    "recipes":{
        "default":{
            "depends" : ["artifactUpload", "deploy"]
        },
        "deploy":{
            "actionsBeforeApp": ["frontend-facia-tool.deploy"]
        },
        "artifactUpload":{
            "actionsBeforeApp": ["frontend-facia-tool.uploadArtifacts"]
        }
    }
}